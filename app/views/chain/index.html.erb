<html>
  <head>
    <title>Ehotel</title>
    <%= csrf_meta_tags %>

  </head>

  <body>
    <div class="options">
    <a href="/chain/new"><button class="newButton">New Hotel Chain</button></a>
    <a href="/hotels/new"><button class="addButton"><i class="fas fa-plus"></i> Add Hotel</button></a>
    </div>
  <h1 id="title"><b>Hotel Chains</b></h1>

  <section class="container">
    <% @chains.each do |c| %>
        <div class="row main">
          <div class="column">
              <a href="/chain/show", style="text-decoration:none;"><%= c.name %></a>
              <br>
              <%= c.address.get_full_address %>
          </div>

          <div class="column">
              <% c.chain_emails.each do |e| %>
                <div class="row">
                    <%= e.email_address %>
                </div>
              <% end %>
          </div>

          <div class="column">
              <% c.chain_phone_numbers.each do |p| %>
                <div class="row">
                    <%= p.phone_number %>
                </div>
              <% end %>
          </div>
          <div class="column">
            <div class="row">
            <%= link_to ' View', c, method: 'show', class: 'fas fa-eye',style:"text-decoration:none; color: #00F" %>
            </div>
            <div class="row">
            <%= link_to ' Edit', c, method: 'edit', class: 'fas fa-edit',style:"text-decoration:none; color: #43CD80" %>
            </div>
            <div class="row">
            <%= link_to ' Delete', c, method: 'delete', data: {confirm: 'Are you sure you want to delete this chain? This action cannot be undone.'}, class: 'fas fa-trash-alt',style:"text-decoration:none; color: #F00" %>
            </div>
          </div>

        </div>

    <% end %>
    <section>

  </body>
</html>
